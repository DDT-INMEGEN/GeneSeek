#:kivy 1.0.9

<GeneSeek>:
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size


    BoxLayout:
        orientation: 'vertical'
        padding: 20
        fullscreen: True    
        width: root.width
        height: root.height
        Label:
            text: "Seek and you shall find"

        TextInput:
            id: textinput
            text: 'KNCJ12'
        Button:
            text: 'Seek info'
            on_press: root.do_action()

        RstDocument:
            id: ficha

